<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>tree</title>
    <style>
        body .layui-tree-skin-shihuang .layui-tree-branch{color: #EDCA50;}
        .layui-tree-inline{display: inline-block}
        .layui-tree li ul {margin-left: 22px;}
    </style>
    <script src="../../../assets/js/config.js"></script>
</head>
<body>
<ul id="demo"></ul>
<br><br><br><br><br>
<ul id="demo2"></ul>
<script>
    Init('myTree', function() {
        $('#demo').myTree({
            nodes: [{ //节点
                name: '父节点1'
                ,children: [{
                    name: '子节点11',
                    checked:true,
                },{
                    name: '子节点12'
                }]
                ,checked:true
                // ,spread:true
            },{
                name: '父节点2（可以点左侧箭头，也可以双击标题）'
                // ,spread:true
                ,children: [{
                    name: '子节点21'
                    ,spread:true
                    ,children: [{
                        name: '子节点211',
                        // spread:true,
                        // checked:true,
                        buttons: [{
                            buttonId: '9fabe834-4cc1-42a7-b3a7-9125e6aa9198',
                            // checked: true,
                            name: '操作新增ERP'
                        },{
                            buttonId: '9fabe834-4cc1-42a7-b3a7-9125e6aa9198',
                            // checked: true,
                            name: '删除'
                        }]
                    },{
                        name: '子节点212'
                    }]
                    // ,checked:true
                },{
                    name: '子节点21'
                }]
                // ,checked:true
            }]
            ,check:'checkbox'
            ,click: function(node){
                console.log(node)    //node即为当前点击的节点数据
            }
            ,skin: 'shihuang'
            ,drag:true
            ,button:true
        });

        $('#demo2').myTree({
            url: '../data/tree.json'
            ,check:'checkbox'
            ,click: function(node){
                console.log(node)    //node即为当前点击的节点数据
            }
            ,skin: 'shihuang'
            ,drag:true
            ,button:true
        });
    });

</script>
</body>
</html>