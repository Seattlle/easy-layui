<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>上传图片</title>
    <style>
        ._up {display: inline-block; text-align: center; position: relative; }
        ._up-pic { background-color: #e8e8e8;width: 100px; height: 100px;line-height: 100px;font-size: 0; position: relative;}
        ._up-pic:before { content: "";position: absolute;z-index: -1;left: -1px;top: -1px; width: 100%; height: 100%;border: 1px dashed #009688;}
        ._up-pic img {max-width: 100%;max-height: 100%;display: none;vertical-align: middle;cursor: pointer;border: none;}
        ._up-pic img.active {display: inline-block;}
        ._up-tool {position: absolute;right: 0;bottom: 0;width: 0;height: 100px;display: none;}
        ._up-tool-head {position: absolute;bottom: 0;width: 100px;background-color: rgba(0,0,0, 0.5);color: #fff;font-size: 14px;line-height: 20px;right: 0px;}
        ._up-tool-body {position: absolute;top: 0;right: -30px;bottom: 0;width: 30px;text-align: center;}
        ._up-tool-body .fa {font-size: 25px;color: #dcdcdc;cursor: pointer;}
        ._up-tool-body .fa:hover {color: #009688;}
        ._up-tool-foot {position: absolute;top: 1px;right: 1px;height: 98px;width: 98px;line-height: 98px;display: none;}
        ._up-tool-foot .layui-icon {font-size: 80px;color: #009688;border-radius: 10px;cursor: pointer;}
        ._up-tool-foot:hover {background-color: #009688;}
        ._up-tool-foot:hover .layui-icon {color: #fff;}
        ._up:hover ._up-tool {display: block;}
        ._empty ._up-tool-foot {display: block;}
        ._empty ._up-tool-head,
        ._empty ._up-tool-body {display: none;}
        .layui-form select, .layui-form input[type=checkbox], .layui-form input[type=radio] {display: none !important;}
        ._upload-add{
            width: 100%;
            height: 100%;
            position: absolute;
            left: 0;
            top: 0;
            cursor: pointer;
            opacity: 0;
        }
    </style>
    <script src="../assets/js/config.js"></script>
    <!-- <script src="../layui/layui.js"></script> -->
</head>
<body>
    <div style="margin: 15px; min-width: 500px;">
        <fieldset class="layui-elem-field">
            <div class="layui-field-box">
                <form class="layui-form" action="">
                    <div class="_layui-flex">
                        <!-- 图片上传 -->
                        <div>
                            <span style="font-size: 16px;">图片上传</span>
                            <hr>
                            <div class="layui-form-item">
                                <div>
                                    <div class="layui-input-inline" id="good_info_imgs"></div>
                                </div>
                            </div>
                            <button type="button" class="layui-btn" id="upload1">上传</button>
                        </div>
                    </div>
                </form>
            </div>
        </fieldset>
    </div>
    <script>
        Init(['jquery','uploads2'], function () {
            var uploads2 = layui.uploads2;
            //执行实例

            $('#good_info_imgs').uploads({
                url:'',
                type:2,
                preview:true,
                title: '产品介绍图',
                auto:false,
                multiple: true,
                exts:'jpg|png|gif',
                bindAction: '#upload1',
                images:[
                    {src:'https://img.alicdn.com/tfs/TB1fnebXQvoK1RjSZFwXXciCFXa-520-280.jpg_q90_.webp',name:'tb'}
                ],
                onDel:function(){
                    console.log('删除');
                },
                done: function (res) {
                    //上传完毕回调
                }
                ,error: function () {
                    console.log('错误');
                    //请求异常回调
                }
            });

        });
    </script>
</body>
</html>