<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>上传图片</title>
    <link rel="stylesheet" href="../layui/css/layui.css">
    <style>
        section{width:500px;margin-bottom:30px}
        .img{
            width:500px;
        }
    </style>
</head>
<body class="layui-pages">

<section class="upload">
    <button type="button" class="layui-btn" id="test1" data-options="{auto:false,bindAction:'#upload',edit:true,url: '/upload/'}">
        <i class="layui-icon">&#xe67c;</i>上传图片
    </button>
    <a href="javascript:;" class="layui-btn" id="upload">确认</a>
</section>

<script src="../layui/layui.js"></script>
<script>
    layui.use(['uploads'], function () {
        //执行实例
        $('#test1').uploads({
            ratio:4/3 //裁剪长宽比
            ,done: function(res){
                //上传完毕回调
            }
            ,error: function(){
                //请求异常回调
            }
        });
    });
</script>
</body>
</html>