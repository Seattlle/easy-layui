<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>select</title>
    <style>
        section {
            width: 500px;
            margin:20px;
        }
    </style>
</head>
<body class="layui-pages">
<form class="layui-form" id="ff">
    <section>
        <select name="city" id="select1" lay-search>
            <option value=""></option>
            <option value="0">北京</option>
            <option value="1">上海</option>
            <option value="2">广州</option>
            <option value="3">深圳</option>
            <option value="4" selected>杭州</option>
            <option value="5">北京5</option>
            <option value="6">上海6</option>
            <option value="7">广州7</option>
            <option value="8">深圳8</option>
            <option value="9">杭州9</option>
        </select>
    </section>
    <section>
        <select>
            <optgroup label="城市记忆">
                <option value="你工作的第一个城市">你工作的第一个城市？</option>
            </optgroup>
            <optgroup label="学生时代">
                <option value="你的工号">你的工号？</option>
                <option value="你最喜欢的老师">你最喜欢的老师？</option>
            </optgroup>
        </select>
    </section>
    <section>
        <select name="urlSelect" data-options="{url:'../data/select.json',textField:'templateName',valueField:'id'}" id="urlSelect"></select>
    </section>
    <section>
        <select id="urlSelect1" name="urlSelect1" data-options="{  url:'../data/select.json',
            textField:'templateName',
            valueField:'id',
            value:'57d8abd1-c679-4128-b335-2c75147ff4a2'}"></select>
    </section>
    <section>
        <select id="urlSelect2" name="urlSelect2" multiple data-options="{
            url:'../data/select.json',
            textField:'templateName',
            valueField:'id',
            value:['57d8abd1-c679-4128-b335-2c75147ff4a2']
        }"></select>
    </section>
    <section>
        <input type="text" class="layui-cascader" id="cascader">
    </section>
    <section>
        <input type="text" class="layui-cascader" id="cascader1">
    </section>
</form>
<script src="../layui/layui.js"></script>
<script>
    layui.use('myform', function () {

        $('select').on('change', function () {
            console.log($(this).attr('name'), $(this).val())
        })

        $("#urlSelect1").select('setValue', 'd20124fe-8462-4d38-a6e3-cbffab65021c');

        // $("#urlSelect2").select({
        //     url:'../data/select.json',
        //     textField:'templateName',
        //     valueField:'id',
        //     value:['57d8abd1-c679-4128-b335-2c75147ff4a2']
        // });

        $("#urlSelect2").select('setValue', ['57d8abd1-c679-4128-b335-2c75147ff4a6', 'd20124fe-8462-4d38-a6e3-cbffab65021c']);

        $("#cascader").cascader({
            url:'../data/address.json',
            keyValue:[{
                nameField:'province',
                valueField:'province',
                childName:'cities'
            },{
                nameField:'city',
                valueField:'city',
                childName:'areas'
            }],
            split:',',
            showAllLevels:true, //结果显示所有层级
            changeOnSelect:true,//选中即改变
            // activeItemChange:true, //选中加载子项（需与url、keyValue同时设置）
        });
        $("#cascader").cascader('setValue',['香港','香港','屯门区']);

        $("#cascader1").cascader({
            data:[{
                "name": "北京市",
                "city": [
                    {
                        "name": "北京市",
                        "city": [
                            {"name":"东城区"},
                            {"name":"西城区"},
                            {"name":"崇文区"},
                            {"name":"宣武区"},
                            {"name":"朝阳区"},
                            {"name":"丰台区"},
                            {"name":"石景山区"},
                            {"name":"海淀区"},
                            {"name":"门头沟区"},
                            {"name":"房山区"},
                            {"name":"通州区"},
                            {"name":"顺义区"},
                            {"name":"昌平区"},
                            {"name":"大兴区"},
                            {"name":"平谷区"},
                            {"name":"怀柔区"},
                            {"name":"密云县"},
                            {"name":"延庆县"}
                        ]
                    }
                ]
            },{
                "name": "天津市",
                "city": [
                    {
                        "name": "天津市",
                        "city": [
                            {"name":"和平区"},
                            {"name":"河东区"},
                            {"name":"河西区"},
                            {"name":"南开区"},
                            {"name":"河北区"},
                            {"name":"红桥区"},
                            {"name":"塘沽区"},
                            {"name":"汉沽区"},
                            {"name":"大港区"},
                            {"name":"东丽区"},
                            {"name":"西青区"},
                            {"name":"津南区"},
                            {"name":"北辰区"},
                            {"name":"武清区"},
                            {"name":"宝坻区"},
                            {"name":"宁河县"},
                            {"name":"静海县"},
                            {"name":"蓟  县"}
                        ]
                    }
                ]
            }],
            keyValue:{
                nameField:'name',
                valueField:'name',
                childName:'city'
            },
            selected:['天津市','天津市','蓟  县']
        });
    });
</script>
</body>
</html>