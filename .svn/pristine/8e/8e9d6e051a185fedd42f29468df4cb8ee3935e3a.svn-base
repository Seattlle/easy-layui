<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>表格页面</title>
</head>
<body class="layui-pages">

   <div id="pages"></div>

<script src="../assets/js/config.js"></script>
<script>
    Init('initPage', function () {

        $("#pages").initPage({
            searchs:[{
                title: '行业名称',
                placeholder: '请输入行业名称搜索',
                name: 'entryName'
            },{
                title: '模板类型',
                placeholder: '请输入选择模板',
                name: 'template',
                type:'select',
                options:"{url:'../data/select.json',textField:'templateName',valueField:'id',value:'57d8abd1-c679-4128-b335-2c75147ff4a2'}"
            },{
                title: '选项',
                placeholder: '请输入选项',
                name: 'template1',
                type:'select',
                options:"{data:[{templateName:'选项1',id:'1001'},{templateName:'选项2',id:'1002'}],textField:'templateName',valueField:'id',value:'1001'}"
            },{
                title: '生产日期',
                placeholder: '请选择日期',
                name: 'date',
                type:'date'
            }],
            menus:'../data/getButtions.json',
            table:{
                url: '../data/datagrid_data1.json',
                where:{template:'57d8abd1-c679-4128-b335-2c75147ff4a2'},
                columns: [[
                    {type: 'numbers',fixed:'left'},
                    {type: 'checkbox',fixed:'left'},
                    {field: 'itemid', title: 'Item ID', width: 80,fixed:'left'},
                    {field: 'status', title: 'status',editor:{type:'select',textField:'title',data:[{"title":"模板一","value":0},{"title":"模板二","value":1},{"title":"模板三","value":2},{"title":"模板四","value":3},{"title":"模板五","value":4}]}},
                    {field: 'listprice', title: 'List Price', editor:'date'},
                    {field: 'unitcost', title: 'Unit Cost',editor:'text', sort:true},
                    {field: 'attr1', title: 'Attribute', width: 250,align:'center',sort:true},
                    {
                        field: 'status', title: 'Status', align: 'center',fixed:'right', formatter: function (value, row) {
                            return value === 1 ? "正常" : "不正常";
                        }
                    }
                ]]
            }
        });

        $("#pages").initPage('table','reload')
        // console.log($("#pages").initPage('table','getSelected'));
    });



    function distributeCodes (callback) {
        console.log('distributeCodes')

        callback&&callback();
    }
    function deliver(callback) {
        console.log('deliver')

        callback&&callback();
    }
    function invalid (callback) {
        console.log('invalid')

        callback&&callback();
    }

</script>
</body>
</html>