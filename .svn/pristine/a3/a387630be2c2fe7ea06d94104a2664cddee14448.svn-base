<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>图片查看</title>
    <link rel="stylesheet" href="../layui/css/layui.css">
    <style>
        section{width:500px;margin-bottom:30px}
        .img{
            width:500px;
        }
    </style>
</head>
<body class="layui-pages">
<section class="preview_wrap">
    <div><img src="../data/54a3ac29-bde8-4e04-ae8c-209ff12bdb6e.jpg" preview class="img"/></div>
    <div><img src="../data/IMG_0600.JPG" preview class="img"/></div>
</section>

<script src="../layui/layui.js"></script>
<script>
    layui.use(['gallery'], function () {
        var gallery=layui.gallery({
            popup:{
                title:'图片预览',
                shade:0.6
            }
        });
    });
</script>
</body>
</html>